<!-- ko with: registerConfirm -->
<h2>Thanks for Registering!</h2>

<h4>
    You still need to<br>
    Verify your email
</h4>
<p><a href="#" data-bind="click: send">Resend Email</a></p>
<h4 data-bind="with: $root.user">
    We sent the FREE verify link<br>
    to you at <strong data-bind="text: name"></strong>
</h4>
<form class="form-horizontal" role="form">
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default" data-bind="click: $root.navigateToLoggedOff, disable: sending">Ok</button>
        </div>
    </div>
</form>
